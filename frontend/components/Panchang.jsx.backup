const MIN_BS_YEAR = 2025; // Corresponds to ~AD 1969
const MAX_BS_YEAR = 2257; // Corresponds to ~AD 2200

// Simple BS to AD conversion (approximate)
const convertBSToAD = (bsYear, bsMonth, bsDay) => {
  // Approximate conversion: BS year - 57 = AD year
  const adYear = bsYear - 57;
  // This is a simplified conversion - in reality it's more complex
  return {
    year: adYear,
    month: bsMonth,
    day: bsDay
  };
};

// Simple AD to BS conversion (approximate)
const convertADToBS = (adYear, adMonth, adDay) => {
  // Approximate conversion: AD year + 57 = BS year
  const bsYear = adYear + 57;
  return {
    year: bsYear,
    month: adMonth,
    day: adDay
  };
};

// Convert English numbers to Nepali numerals
const convertToNepaliNumerals = (num) => {
  const nepaliNumerals = ['‡•¶', '‡•ß', '‡•®', '‡•©', '‡•™', '‡•´', '‡•¨', '‡•≠', '‡•Æ', '‡•Ø'];
  return num.toString().split('').map(digit => nepaliNumerals[parseInt(digit)]).join('');
};

// Generate calendar days for a given month
const generateCalendarDays = (year, month) => {
  const daysInMonth = daysInNepaliMonth[month - 1];
  const days = [];
  
  for (let day = 1; day <= daysInMonth; day++) {
    days.push(day);
  }
  
  return days;
};

